@inherits LayoutComponentBase

<MudThemeProvider Theme="darkTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Inherit" Fixed="false" Dense="true" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="() => DrawerToggle()" />
        <MudText Typo="Typo.h6" Class="mr-10">Kyle Hobdey</MudText>
        <MudText Typo="Typo.caption" Color="Color.Tertiary">// Software Developer</MudText>
        <MudAppBarSpacer />
        <MudTooltip Text="Download CV">
            <MudIconButton Icon="@Icons.Custom.FileFormats.FilePdf" Color="Color.Inherit" />
        </MudTooltip>
        <MudTooltip Text="Github Profile">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
        </MudTooltip>
        <MudTooltip Text="LinkedIn Profile">
            <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Inherit" />
        </MudTooltip>
        <MudTooltip Text="Contact Me">
            <MudIconButton Icon="@Icons.Material.Filled.Mail" Color="Color.Inherit" />
        </MudTooltip>
</MudAppBar>
    <MudDrawer @bind-Open="drawerOpen" Elevation="2">
        <Navigation />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
