@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@implements IDisposable

<table class="board">
    @for (var h = 0; h < Board.Height; h++)
    {
        <tr class="board-row">
            @for (var w = 0; w < Board.Width; w++)
            {
                var cell = Board.Cells[Board.Width * h + w];
                var type = (int)cell.Type;
                <td id="cell-@h-@w" data-h="@h" data-w="@w" class="board-cell type-@type" draggable="true" @onmousedown="async () => await CellInteracted(cell.H, cell.W)"
                    @ondragenter="async () => await CellInteracted(cell.H, cell.W)"></td>
            }
        </tr>
    }
</table>
