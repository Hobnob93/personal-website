@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@implements IDisposable

@{
    var board = BoardState.Value.Board;
    var height = board.Height;
    var width = board.Width;
}

<table class="board">
@for (var h = 0; h < height; h++)
{
    <tr class="board-row">
        @for (var w = 0; w < width; w++)
        {
            var cell = board.Cells[width * h + w];
            var type = (int)cell.Type;
            <td id="cell-@h-@w" class="board-cell type-@type" draggable="true" @onmousedown="async () => await CellInteracted(cell.H, cell.W)"
                @ondragenter="async () => await CellInteracted(cell.H, cell.W)"></td>
        }
    </tr>
}
</table>
