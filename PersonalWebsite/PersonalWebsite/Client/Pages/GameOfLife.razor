@page "/visual-algorithms/cellular-automata"

<MudContainer>
    <MudPaper>
        <MudToolBar>
            <MudTooltip Text="Help">
                <MudIconButton Icon="@Icons.Material.Outlined.Help" />
            </MudTooltip>
            <MudToolBarSpacer />
            <MudTooltip Text="Play Speed">
                <MudIconButton Icon="@Icons.Material.Filled.Timer" />
            </MudTooltip>
            <MudTooltip Text="Start">
                <MudIconButton Icon="@Icons.Material.Filled.PlayArrow" />
            </MudTooltip>
            <MudTooltip Text="Skip Frame">
                <MudIconButton Icon="@Icons.Material.Filled.SkipNext" />
            </MudTooltip>
            <MudTooltip Text="Stop">
                <MudIconButton Icon="@Icons.Material.Filled.Stop" />
            </MudTooltip>
            <MudToolBarSpacer />
            <MudTooltip Text="Set Grid Size">
                <MudIconButton Icon="@Icons.Material.Filled.GridView" />
            </MudTooltip>
            <MudTooltip Text="Edge Wrap">
                <MudIconButton Icon="@Icons.Material.Filled.WrapText" />
            </MudTooltip>
            <MudTooltip Text="Pick Preset">
                <MudIconButton Icon="@Icons.Material.Filled.Colorize" />
            </MudTooltip>
            <MudToolBarSpacer />
            <MudTooltip Text="Reset Grid">
                <MudIconButton Icon="@Icons.Material.Outlined.GridOff" @onclick="ClearBoard" />
            </MudTooltip>
        </MudToolBar>

        <BoardWidget @ref="Board" Type="BoardType" Height="40" Width="100" />
    </MudPaper>
</MudContainer>
